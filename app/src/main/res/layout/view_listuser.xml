<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/su_icon"
            android:layout_width="@dimen/user_icon_post"
            android:layout_height="@dimen/user_icon_post"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/user_icon" />

        <TextView
            android:id="@+id/su_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Name"
            android:textColor="@color/BlackGray"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/su_follow"
            app:layout_constraintStart_toEndOf="@+id/su_icon"
            app:layout_constraintTop_toTopOf="@+id/su_icon" />

        <TextView
            android:id="@+id/su_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="#10000000"
            app:layout_constraintBottom_toBottomOf="@id/su_icon"
            app:layout_constraintStart_toEndOf="@+id/su_icon" />

        <ImageButton
            android:id="@+id/su_follow"
            android:layout_width="@dimen/button_size_small"
            android:layout_height="@dimen/button_size_small"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_follow" />

        <ImageView
            android:id="@+id/su_gender"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/su_number"
            app:layout_constraintStart_toEndOf="@+id/su_number"
            app:layout_constraintTop_toTopOf="@+id/su_number"
            app:srcCompat="@drawable/ic_male" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>