<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/fullpost_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackgroundFloating"
        android:contentInsetStart="0dp"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="m">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/ToolbarConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <ImageButton
                android:id="@+id/fullpost_back"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:drawable/screen_background_light_transparent"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/ic_back" />

            <ImageButton
                android:id="@+id/search_more"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:drawable/screen_background_light_transparent"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_more_v" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/fullpost_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fullpost_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/fullpost_cardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fullpost_toolbar">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fullpost_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:lineSpacingMultiplier="1.25"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@id/fullpost_divider1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/fullpost_usericon"
                        tools:text="Content" />

                    <ImageView
                        android:id="@+id/fullpost_usericon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/fullpost_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@android:drawable/sym_def_app_icon" />

                    <TextView
                        android:id="@+id/fullpost_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="Username"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/fullpost_time"
                        app:layout_constraintStart_toEndOf="@+id/fullpost_usericon"
                        app:layout_constraintTop_toTopOf="@+id/fullpost_usericon" />

                    <TextView
                        android:id="@+id/fullpost_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Time"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/fullpost_usericon"
                        app:layout_constraintStart_toEndOf="@+id/fullpost_usericon"
                        app:layout_constraintTop_toBottomOf="@+id/fullpost_username" />

                    <View
                        android:id="@+id/fullpost_divider1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/darker_gray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/fullpost_content" />

                    <LinearLayout
                        android:id="@+id/fullpost_button_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/fullpost_divider1"
                        app:layout_constraintVertical_bias="0.0">

                        <ImageButton
                            android:id="@+id/fullpost_comment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:drawable/screen_background_light_transparent"
                            app:srcCompat="@drawable/ic_comment"
                            tools:layout_editor_absoluteX="37dp"
                            tools:layout_editor_absoluteY="500dp" />

                        <ImageButton
                            android:id="@+id/fullpost_collect"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:drawable/screen_background_light_transparent"
                            app:srcCompat="@drawable/ic_collection"
                            tools:layout_editor_absoluteX="288dp"
                            tools:layout_editor_absoluteY="508dp" />

                        <ImageButton
                            android:id="@+id/fullpost_share"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:drawable/screen_background_light_transparent"
                            app:srcCompat="@drawable/ic_share"
                            tools:layout_editor_absoluteX="104dp"
                            tools:layout_editor_absoluteY="508dp" />

                    </LinearLayout>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/fullpost_cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fullpost_cardView1">

                <android.support.design.widget.TabLayout
                    android:id="@+id/fullpost_tablayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    app:tabIndicatorColor="@android:color/holo_red_light"
                    app:tabSelectedTextColor="@android:color/holo_red_light"
                    app:tabTextAppearance="@style/TextAppearance.AppCompat.Body2"
                    app:tabTextColor="@color/common_google_signin_btn_text_light_default"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="287dp">

                    <android.support.design.widget.TabItem
                        android:id="@+id/comments_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comments" />

                    <android.support.design.widget.TabItem
                        android:id="@+id/ratings_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ratings" />

                </android.support.design.widget.TabLayout>

            </android.support.v7.widget.CardView>

            <android.support.v4.view.ViewPager
                android:id="@+id/fullpost_viewpager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fullpost_cardView2">

            </android.support.v4.view.ViewPager>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>